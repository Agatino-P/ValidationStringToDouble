<Window
    x:Class="ValidationStringToDouble.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ValidationStringToDouble"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="300"
    Height="350"
    d:DataContext="{d:DesignInstance Type={x:Type local:MainWindowViewModel},
                                     IsDesignTimeCreatable=True}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Text" />
        <TextBox Grid.Column="1" Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Grid.Row="1" Text="Text" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Numero}" />
        <TextBlock Grid.Row="2" Text="Errors" />
        <ListBox
            Grid.Row="2"
            Grid.Column="1"
            ItemsSource="{Binding Errors}" />
    </Grid>
</Window>
